# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = crlf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Markdown: keep trailing spaces for line breaks; no trimming
[*.md]
trim_trailing_whitespace = false
end_of_line = crlf
indent_size = 4

# PowerShell scripts & modules
[*.{ps1,psm1,psd1}]
end_of_line = crlf
indent_style = space
indent_size = 4

# JSON/YAML
[*.{json,yml,yaml}]
end_of_line = crlf
indent_style = space
indent_size = 2

# Shell scripts (if present) stick to LF
[*.sh]
end_of_line = lf
indent_style = space
indent_size = 2

# Git attributes and ignores
[{.gitattributes,.gitignore}]
end_of_line = lf
insert_final_newline = true
